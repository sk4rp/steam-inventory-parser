{
    "name": "steam/parser",
    "description": "Steam Inventory Parser",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Maxim Golev"
        }
    ],
    "scripts": {
        "stan": "phpstan analyze src --memory-limit=512m",
        "fix": "vendor/bin/php-cs-fixer fix src",
        "all": "composer stan && composer fix"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "symfony/var-dumper": "^7.2",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.69"
    },
    "require": {
        "guzzlehttp/guzzle": "^7.9"
    }
}
